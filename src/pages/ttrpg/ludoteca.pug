---
pagination:
  data: collections.rolLudotecaSorted
  size: 9
---
//- Plantilla para la paginaci√≥n de juegos de la ludoteca de rol
extends ../../includes/layouts/full_page.pug

block contents
  #ttrpg_ludoteca
    .ui.segment
      h1.header Nuestra ludoteca de rol

      .ui.link.cards
        for item in pagination.items
          .card
            .content
              .header= item.data.title
            a(href= filters.urlFor(item.url))
              img.ui.medium.image.rounded(src= filters.urlFor(`/public/images/ttrpg/ludoteca/${item.data.image}`))
            .extra.content
              .meta= item.data.system
              .meta= item.data.format

      include ../../includes/layouts/includes/paginator.pug
